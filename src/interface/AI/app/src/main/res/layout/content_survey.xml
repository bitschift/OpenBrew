                app:layout_constraintVertical_bias="0.5">

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
